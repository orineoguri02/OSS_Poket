{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/pokemon/(\\d+)/(.+\\.(png|jpg|jpeg|gif|svg|webp|ico|dae|fbx|obj|glb|gltf|mtl|DAE))",
      "dest": "/pokemon/$1/$2"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|svg|webp|ico|dae|fbx|obj|glb|gltf|mtl|DAE))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
